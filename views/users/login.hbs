<div class="footer-pusher container-fluid full-width">

  <div class="center-page">

    <h1 id="logo">pinpoint</h1>
    <form action="/session/login" method="POST" id="loginForm">
      <div class="row">
        <div class=" col-xs-offset-4 col-xs-4">
          {{#unless errorMessage}}
            <h4>Please log in</h4>
          {{/unless}}
          {{#if errorMessage}}
            <div class="alert alert-danger">
              <p>{{errorMessage}}</p>
            </div>
          {{/if}}
          <input type="text" name="email" id="userName" class="form-control input-sm chat-input" placeholder="username" />
          </br>
          <input type="password" name="password" id="userPassword" class="form-control input-sm chat-input" placeholder="password" />
          </br>
          <div class="form-group row">
            <div class="col-xs-1">
              <button class="btn btn-primary btn-md" type="submit">login <i class="fa fa-sign-in"></i>
            </div>
            <div class="col-xs-1">
            </div>
            <div class="col-xs-1">
              <button class="btn btn-primary" type="button"><a id="register-link" href="/users/register">Register</a></button>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
