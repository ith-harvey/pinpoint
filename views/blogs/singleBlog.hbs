<div class="container">
  {{#each blogs}}
    <h1>{{this.title}}</h1>
    <h4>{{this.rating}}</h4>
    <p>{{this.description}}</p>
    <div><a href='{{this.url}}'>{{this.url}}</a></div>

    <h4>Tags : </h4>
    {{#each this.tags}}
      <p>{{this.name}}</p>
    {{/each}}

    {{#each this.comments}}
      {{> comments}}
    {{/each}}
    {{> addComment}}

    {{#if error}}
      <h3>{{error}}</h3>
    {{/if}}

  {{/each}}
</div>
